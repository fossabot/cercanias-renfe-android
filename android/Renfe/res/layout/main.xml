<LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="fill_parent"
      android:background = "#ffd9e2f3" 
      android:orientation = "vertical"
      xmlns:android="http://schemas.android.com/apk/res/android" >

	  <TextView
		  android:id="@+id/spinner1_text"
		  android:text="Núcleo de población:"
		  android:textSize="15sp"
		  android:textStyle="bold"
		  android:textColor = "#ff000000" 
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"    
		  android:layout_marginTop="6px"        
		  android:layout_marginLeft="4px" />

	  <Spinner android:id="@+id/spinner1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="2px"
	        android:layout_marginLeft="4px"
	        android:drawSelectorOnTop="true"
	  />      
	  
	  <TextView
		  android:id="@+id/spinner2_text"
		  android:text="Estación de origen:"
		  android:textSize="15sp"
		  android:textStyle="bold"
		  android:textColor = "#ff000000" 
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"  
		  android:layout_marginTop="6px"          
		  android:layout_marginLeft="4px" />	  
	  
	  <Spinner android:id="@+id/spinner2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="2px"
	        android:layout_marginLeft="4px"
	        android:drawSelectorOnTop="true"
	  />   	 
	  
	  <TextView
		  android:id="@+id/spinner3_text"
		  android:text="Estación de destino:"
		  android:textSize="15sp"
		  android:textStyle="bold"
		  android:textColor = "#ff000000" 
		  android:layout_width="wrap_content"
		  android:layout_height="wrap_content"   
		  android:layout_marginTop="6px"         
		  android:layout_marginLeft="4px" />	  
	  
	  <Spinner android:id="@+id/spinner3"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="2px"
	        android:layout_marginLeft="4px"
	        android:drawSelectorOnTop="true"
	  /> 	   
	  
	  
	  <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:orientation = "horizontal">
		    
		  <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5px"
			    android:orientation = "vertical">		    
		    
			  <TextView
				  android:id="@+id/day_text"
				  android:text="Día:"
				  android:textSize="15sp"
				  android:textStyle="bold"
				  android:textColor = "#ff000000" 
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"   
				  android:layout_marginTop="6px"         
				  android:layout_marginLeft="4px" />	  
			  
			  <Spinner android:id="@+id/spinner_day"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2px"
			        android:layout_marginLeft="4px"
			        android:drawSelectorOnTop="true"
			  /> 	
	  	  </LinearLayout> 	 
	  	  
		  <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5px"
			    android:orientation = "vertical">		    
		    
			  <TextView
				  android:id="@+id/month_text"
				  android:text="Mes:"
				  android:textSize="15sp"
				  android:textStyle="bold"
				  android:textColor = "#ff000000" 
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"   
				  android:layout_marginTop="6px"         
				  android:layout_marginLeft="4px" />	  
			  
			  <Spinner android:id="@+id/spinner_month"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2px"
			        android:layout_marginLeft="4px"
			        android:drawSelectorOnTop="true"
			  /> 	
	  	  </LinearLayout> 	
	  	  
		  <LinearLayout
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="5px"
			    android:orientation = "vertical">		    
		    
			  <TextView
				  android:id="@+id/year_text"
				  android:text="Año:"
				  android:textSize="15sp"
				  android:textStyle="bold"
				  android:textColor = "#ff000000" 
				  android:layout_width="wrap_content"
				  android:layout_height="wrap_content"   
				  android:layout_marginTop="6px"         
				  android:layout_marginLeft="4px" />	  
			  
			  <Spinner android:id="@+id/spinner_year"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_marginTop="2px"
			        android:layout_marginLeft="4px"
			        android:drawSelectorOnTop="true"
			  /> 	
	  	  </LinearLayout> 		  	  	  	     	 
		    
	  </LinearLayout> 
      
      
      <Button
            android:id="@+id/btn_view"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver horarios"
      />        
      
</LinearLayout>